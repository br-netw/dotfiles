" Looks

set guifont=JetBrains\ Mono
syntax on
set number relativenumber
set cursorline

" Indents

set shiftwidth=4
set tabstop=4
set ai
set si
set noexpandtab

" Turning off backups

set nobackup
set nowb
set noswapfile

" Colorscheme

set background=dark
colorscheme gruvbox

" Filetypes

filetype plugin indent on

" History

set history=500

" Use system clipboard

set clipboard=unnamedplus
